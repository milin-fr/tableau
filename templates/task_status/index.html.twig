{% extends 'base.html.twig' %}

{% block title %}TaskStatus index{% endblock %}

{% block body %}
    <h1>TaskStatus index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>Enabled</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for task_status in task_statuses %}
            <tr>
                <td>{{ task_status.id }}</td>
                <td>{{ task_status.title }}</td>
                <td>{{ task_status.createdAt ? task_status.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ task_status.updatedAt ? task_status.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ task_status.enabled ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('task_status_show', {'id': task_status.id}) }}">show</a>
                    <a href="{{ path('task_status_edit', {'id': task_status.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('task_status_new') }}">Create new</a>
{% endblock %}
